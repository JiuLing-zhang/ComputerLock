@using System.IO

<MudDialog>
    <DialogContent>
        <MudPaper Width="100%" Elevation="0" Class="pb-2">
            <MudStack Row="true" Justify="Justify.SpaceBetween" Class="mb-4">
                <MudText Typo="Typo.h6">@(Lang["VersionHistory"])</MudText>
                <MudIconButton Icon="@Icons.Material.Filled.Close"
                               Color="Color.Default"
                               Size="Size.Small"
                               OnClick="Close" />
            </MudStack>

            <MudMarkdown Value="@_value"/>
        </MudPaper>
    </DialogContent>
</MudDialog>

@code
{
    private string _value = null!;

    [Inject]
    private IStringLocalizer<Lang> Lang { get; set; } = null!;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private void Close() => MudDialog.Cancel();

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        const string markdownFileName = "VERSION_HISTORY.md";
        if (!File.Exists(markdownFileName))
        {
            _value = "什么也没找到\ud83d\ude01\ud83d\ude01";
            return;
        }
        _value = await File.ReadAllTextAsync(markdownFileName);
    }
}