<Window x:Class="ComputerLock.WindowLockScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title=""
        Topmost="True"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Height="450"
        Width="800"
        InputMethod.IsInputMethodEnabled="False"
        InputMethod.PreferredImeState="Off"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <Style x:Key="CustomPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#B2FFFFFF"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Panel.Background>
            <SolidColorBrush Color="#01000000"/>
        </Panel.Background>

        <!-- 顶部呼吸灯，默认隐藏 -->
        <Grid VerticalAlignment="Top">
            <Border x:Name="TopBreathingLight" Background="#fb8c00" Height="4" 
                    HorizontalAlignment="Stretch" Visibility="Collapsed"/>
        </Grid>

        <!-- 左上角小圆点 -->
        <Border x:Name="DotTopLeft"
                Width="10" 
                Height="10"
                Background="#fb8c00"
                CornerRadius="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="2"
                Visibility="Collapsed" />

        <!-- 右上角小圆点 -->
        <Border x:Name="DotTopRight"
                Width="10" Height="10"
                Background="#fb8c00"
                CornerRadius="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="2"
                Visibility="Collapsed" />

        <Border MouseDown="PasswordBlock_MouseDown" 
                x:Name="PasswordBlock" 
                Width="230" 
                Height="55" 
                Opacity="1"
                CornerRadius="10"
                BorderBrush="Transparent" 
                Background="#EAEAEA" 
                BorderThickness="1">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="LblPassword" 
                       Grid.Row="0"
                       Grid.Column="0" 
                       Foreground="#000000" 
                       Opacity="0.5"/>
                <Label x:Name="LblMessage"
                       Grid.Row="0" 
                       Grid.Column="2" 
                       Foreground="#000000" 
                       Opacity="0.5"/>
                <PasswordBox PasswordChanged="TxtPassword_PasswordChanged" 
                             KeyDown="TxtPassword_KeyDown"
                             x:Name="TxtPassword"
                             Grid.Row="2"
                             Grid.Column="0"
                             Grid.ColumnSpan="3"
                             InputMethod.IsInputMethodEnabled="False"
                             InputMethod.PreferredImeState="Off"
                             Style="{StaticResource CustomPasswordBoxStyle}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
