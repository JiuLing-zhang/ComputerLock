<MudDialog>
    <DialogContent>
        <MudPaper Width="350px" Elevation="0">
            <MudPasswordField @bind-Value="@_password"
                              Variant="Variant.Text"
                              Label="@(Lang["SetPasswordInput"])"
                              IconSize="Size.Small" />
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary"
                   FullWidth="true"
                   Variant="Variant.Filled"
                   OnClick="Submit">
            @(Lang["SetPasswordFinished"])
        </MudButton>
    </DialogActions>
</MudDialog>

