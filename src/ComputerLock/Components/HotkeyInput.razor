<MudPaper Class="d-flex align-center" Elevation="0">
    <MudText Typo="Typo.button" Style="@(Disabled ? "opacity:0.5;" : "")">@(Title)</MudText>
    <MudButton Class="ml-3"
               Size="Size.Small"
               Color="Color.Primary"
               Disabled="Disabled"
               OnClick="SetShortcutKey">
        @(_lockHotkeyDisplay)
    </MudButton>
    @if (Hotkey.IsNotEmpty())
    {
        <MudTooltip Disabled="Disabled" Text="@(Lang["DeleteShortcutKeys"])" Delay="600">
            <MudIconButton Icon="@Icons.Material.Filled.Delete"
                           Disabled="Disabled"
                           Size="Size.Small"
                           OnClick="ClearShortcutKey" />
        </MudTooltip>
    }
</MudPaper>
