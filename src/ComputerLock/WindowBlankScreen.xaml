<Window x:Class="ComputerLock.WindowBlankScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title=""
        Topmost="True"      
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        Height="450"
        Width="800"
        InputMethod.IsInputMethodEnabled="False"
        InputMethod.PreferredImeState="Off"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown"
        Closing="Window_Closing">
    <Grid>
        <!-- 背景容器 -->
        <Grid.Background>
            <SolidColorBrush Color="#01000000" x:Name="BackgroundColorBrush"/>
        </Grid.Background>
        
        <!-- 背景图片 -->
        <Image x:Name="BackgroundImage" Stretch="UniformToFill" Visibility="Collapsed"/>
        
        <!-- 顶部呼吸灯，默认隐藏 -->
        <Grid VerticalAlignment="Top">
            <Border x:Name="TopBreathingLight"
                    Background="#fb8c00" 
                    Height="4" 
                    HorizontalAlignment="Stretch"
                    Visibility="Collapsed"/>
        </Grid>

        <!-- 左上角小圆点 -->
        <Ellipse x:Name="DotTopLeft"
                 Width="10"
                 Height="10"
                 Fill="#fb8c00"
                 Opacity="0.3"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="2"
                 Visibility="Collapsed"/>

        <!-- 右上角小圆点 -->
        <Ellipse x:Name="DotTopRight"
                 Width="10"
                 Height="10"
                 Fill="#fb8c00"
                 Opacity="0.3"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Margin="2"
                 Visibility="Collapsed"/>
    </Grid>
</Window>